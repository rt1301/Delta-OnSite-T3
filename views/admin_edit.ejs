<%-include("partials/header.ejs")%>
<form action="/admin/<%=student._id%>?_method=PUT" method="POST">
    <div class="auth-container">
        <h1>Edit Student Details</h1>
        <hr>
    <div class="form-group">
        <label for="Name">Name</label>
        <input id="username" type="text" name="student[name]" class="form-control" value="<%=student.name%>">
    </div>
    <div class="form-group">
        <label for="roll">Roll No.</label>
        <input id="roll-no" type="text" name="student[roll]" class="form-control" value="<%=student.roll%>">
    </div>
    <div class="form-group">
       <button class="btn btn-login" type="submit">Submit</button>
    </div>
    </div>
</form>


<%-include("partials/footer.ejs")%>